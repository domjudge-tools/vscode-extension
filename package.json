{
  "name": "submit",
  "displayName": "submit",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "myExtension.runAction",
        "title": "Run My Action"
      },
      {
        "command": "myExtension.saveCredentials",
        "title": "Save DOMjudge Credentials",
        "category": "DOMjudge"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "myExtension.runAction",
          "group": "navigation@1"
        }
      ]
    },
    "icons": {
      "myExtension.runAction": {
        "default": "./media/icon.svg",
        "dark": "./media/icon.svg"
      }
    }
  },
  "configuration": {
    "title": "DOMjudge",
    "properties": {
      "domjudge.url": {
        "type": "string",
        "default": "http://127.0.0.1:12345",
        "description": "Base URL of the DOMjudge instance"
      },
      "domjudge.contestId": {
        "type": "string",
        "default": "1",
        "description": "Contest ID"
      },
      "domjudge.username": {
        "type": "string",
        "default": "team*",
        "description": "Default team username (password prompted separately for security)"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test",
    "build": "vscode package",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "form-data": "^4.0.4",
    "globals": "^16.5.0"
  }
}
